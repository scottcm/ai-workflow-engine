# aiwf configuration file
#
# Copy this file to:
#   .aiwf/config.yml            (project-specific, recommended)
# or
#   ~/.aiwf/config.yml          (user-wide default)
#
# Project config overrides user config.
# CLI flags override both.

# -------------------------------------------------------------------
# Profile
# -------------------------------------------------------------------
# Logical workflow profile to use.
#
profile: jpa-mt

# -------------------------------------------------------------------
# Providers
# -------------------------------------------------------------------
# Provider selection per workflow role.
#
# Valid values (M6):
#   - manual   (human-in-the-loop; files written, user responds)
#
# Future values may include:
#   - gemini
#   - claude
#   - openai
#
# Missing roles will fall back to defaults.
#
providers:
  planner: manual
  generator: manual
  reviewer: manual
  reviser: manual

# -------------------------------------------------------------------
# Prompt Hashing
# -------------------------------------------------------------------
# Whether to hash prompts during ING phase approval.
#
# When enabled, prompts are hashed before being sent to the provider.
# Useful for audit trails and detecting prompt edits.
#
# CLI flags --hash-prompts / --no-hash-prompts override this value.
#
hash_prompts: false

# -------------------------------------------------------------------
# Dev mode
# -------------------------------------------------------------------
# Optional developer flag passed through to the engine.
# Meaning is profile-specific.
#
# Set to null to disable.
# CLI --dev overrides this value.
#
dev: null
